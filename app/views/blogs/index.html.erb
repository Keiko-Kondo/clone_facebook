<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>
  <%= link_to 'ブログの投稿', new_blog_path %>
  <%= link_to "写真の投稿", new_picture_path %>

  <tbody>
    <h3>これまでのブログ投稿一覧</h3>
    <% @blogs.each do |blog| %>
      <tr>
        <td><%= blog.comment %></td>
        <td><%= link_to 'Show', blog %></td>
        <td><%= link_to 'Edit', edit_blog_path(blog) %></td>
        <td><%= link_to 'Destroy', blog, method: :delete, data: { confirm: '本当に削除しますか?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
