<!DOCTYPE html>
<html>
  <head>
    <title>CloneFacebook</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <meta name="viewport" content="width=device-width">
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>
  <body>
    <% flash.each do |key, value| %>
      <%= content_tag(:div, value, class: "#{key}") %>
    <% end %>
    <% if logged_in? %>
      <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
          <li class="breadcrumb-item"><%= link_to "Home", user_path(current_user.id)%></li>
          <li class="breadcrumb-item active" aria-current="page"><%= link_to "Logout", session_path(current_user.id), method: :delete %></li>
          <p class="user_name">ユーザー名：<%= current_user.name %></p>
        </ol>
      </nav>
    <% else %>
      <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
          <li class="breadcrumb-item"><%= link_to "Sign up", new_user_path%></li>
          <li class="breadcrumb-item active" aria-current="page"><%= link_to "Login", new_session_path %></li>
        </ol>
      </nav>
    <% end %>
  <%= yield %>
  </body>
</html>
