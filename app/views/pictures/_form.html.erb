<%= form_with(model: @picture, local: true, url: choose_new_or_edit_p ) do |form| %>
  <% if @picture.errors.any? %>
    <div id="error_explanation">
      <h2><%= @picture.errors.count %> 件のエラーがあります。</h2>
      <ul>
      <% @picture.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <div class="field">
    <br>
    <%= form.label :image %>
    <div class="picture"><%= image_tag(@picture.image.url) if @picture.image && @picture.image.url %></div>
    <%= form.file_field :image %>
    <%= form.hidden_field :image_cache %>
    <br>
    <%= form.label :comment %>
    <div><%= form.text_field :comment %></div>
  </div>
  <div class="actions">
    <br>
    <%= form.submit "投稿する" %>
  </div>
<% end %>
