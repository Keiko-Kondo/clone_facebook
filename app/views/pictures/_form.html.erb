    <div id="error_explanation">
      <h2><%= pluralize(picture.errors.count, "error") %> 件のエラーがあります。</h2>
      <ul>
      <% picture.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
<% end %>
<%= form_with(model: picture, local: true, url: choose_new_or_edit_p) do |form| %>
  <div class="field">
    <%= form.label :image %>
    <div class="picture"><%= image_tag(@picture.image.url) if @picture.image && @picture.image.url %></div>
    <%= form.file_field :image %>
    <%= form.hidden_field :image_cache %>
    <%= form.label :comment %>
    <%= form.text_field :comment %>
  </div>
  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
