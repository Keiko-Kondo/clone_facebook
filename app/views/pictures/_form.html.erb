<%= form_with(model: picture, local: true, url: choose_new_or_edit_p) do |form| %>
  <div class="field">
    <%= form.label :image %>
    <div class="picture"><%= image_tag(@picture.image.url) if @picture.image && @picture.image.url %></div>
    <%= form.file_field :image %>
    <%= form.hidden_field :image_cache %>
  </div>
  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
